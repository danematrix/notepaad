.wrapper_with_padding
	#notes.clearfix
		- unless @notes.blank?
			- @notes.each do |note|
				%a{ href: (url_for [note])}
					.note
						%p.title= note.title
						%p.date= time_ago_in_words(note.created_at)					
		- else
			%h2 Add a note
			%p It appears you haven't created any notes yet... Let's fix that...
			%button= link_to "New note", new_note_path
